source "https://rubygems.org"

# Use GitHub Pages gem, which includes a specific version of Jekyll and other plugins
gem "github-pages", group: :jekyll_plugins

# Optional plugins (you can keep these or remove them based on your needs)
gem "jekyll-sitemap"  # Automatically generates a sitemap
gem "jekyll-seo-tag"  # Adds SEO metadata to your site
gem 'wdm', '>= 0.1.0' if Gem.win_platform?
